<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- What you input goes here -->
    <TextView
        android:id="@+id/display_space"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_space"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text=""
        android:textAlignment="textEnd"
        android:textSize="32dp">

    </TextView>

    <!-- Result goes here -->
    <TextView
        android:id="@+id/result_space"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/see_history"
        android:layout_marginStart="16dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="48dp">
    </TextView>

    <Button
        android:id="@+id/see_history"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@id/button_layout"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="0dp"
        android:background="@android:color/transparent"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:paddingEnd="6dp"
        android:text="See history"
        android:textAlignment="textEnd"
        android:textColor="#FF5722"
        android:textSize="12dp"
        android:textStyle="bold">
    </Button>

    <!-- Space for buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/button_layout"
        android:layout_alignParentBottom="true"
        android:paddingVertical="8dp"
        style="@style/button_layout_theme">

        <!-- Each one of these is a row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/button_row1"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_C"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="C"
                android:textColor="#FF5722"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_BracketOpen"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="("
                android:textColor="#4CAF50"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_BracketClose"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text=")"
                android:textColor="#4CAF50"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="/"
                android:textColor="#4CAF50"
                android:textSize="30dp"
                app:cornerRadius="33dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/button_row2"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="7"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="8"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="9"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="x"
                android:textColor="#4CAF50"
                android:textSize="30dp"
                app:cornerRadius="33dp" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/button_row3"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="4"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="5"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="6"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtract"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="-"
                android:textColor="#4CAF50"
                android:textSize="30dp"
                app:cornerRadius="33dp" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/button_row4"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="1"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="2"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="3"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_plus"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="+"
                android:textColor="#4CAF50"
                android:textSize="30dp"
                app:cornerRadius="33dp" />




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/button_row5"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_AC"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="AC"
                android:textColor="#FF5722"
                android:textSize="17dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="0"
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_separator"
                style="@style/button_theme_secondary"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:text="."
                android:textSize="30dp"
                app:cornerRadius="33dp" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                style="@style/button_theme"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:backgroundTint="#4CAF50"
                android:text="="
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="33dp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>